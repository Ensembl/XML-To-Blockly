<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0" xmlns:blockly="http://fake/url">

<start>
	<ref name="structure"/>
</start>

<define name="structure">
    <choice>
        <element name="hash">
            <zeroOrMore>
                <element name="pair">
                    <attribute name="key"/>
                    <ref name="structure"/>
                </element>
            </zeroOrMore>
        </element>
        <element name="array">
            <zeroOrMore>
                <element name="item">
                    <ref name="structure"/>
                </element>
            </zeroOrMore>
        </element>
        <text blockly:blockName="scalar"/>
    </choice>
</define>

</grammar>